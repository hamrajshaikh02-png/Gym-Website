<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>FitNFine</title>

  <!-- REQUIRED FOR RESPONSIVE -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <link rel="stylesheet" href="/style.css">
</head>

<body>

  <!-- NAVBAR -->
  <%- include('navbar') %>

  <!-- HERO SECTION -->
  <section class="hero-section d-flex align-items-center text-white py-5">
    <div class="container text-center">

      <h1 class="fw-bold display-4">
        Build Your Best Body with
        <span class="text-warning">Fit</span><span class="text-danger">N</span><span>Fine</span>
      </h1>

      <p class="lead mt-3">
        Transform your body, boost your confidence, and achieve your fitness goals with expert trainers and modern
        equipment.
      </p>

      <div class="mt-4 d-grid gap-3 d-md-flex justify-content-center">
        <a href="/membership" class="btn btn-primary btn-lg px-4">
          Join Now
        </a>
        <a href="/about" class="btn btn-outline-light btn-lg px-4">
          Learn More
        </a>
      </div>

    </div>
  </section>

  <!-- Home About Section -->
  <section class="py-5 diet-section bg-light">
    <div class="container">
      <div class="row align-items-center mt-4 text-center text-md-start">

        <div class="col-md-6">
          <h2 class="fw-bold mb-4">
            <%- about[0].title %>
            <span class="text-warning">Fit</span><span class="text-danger">N</span><span>Fine</span>
          </h2>
          <p>
            <%- about[0].description %>
          </p>
          <a href="/about" class="btn btn-primary mt-3 px-4">Learn More</a>
        </div>

        <div class="col-md-6 text-center mt-4 mt-md-0">
          <img src="/images/<%= about[0].image %>" class="img-fluid w-100 rounded-3">
        </div>

      </div>
    </div>
  </section>

  <!-- Why Choose FitNFine -->
  <section class="why-gym py-5 bg-light">
    <div class="container text-center">

      <h2 class="fw-bold mb-5">
        Why Choose
        <span class="text-warning">Fit</span><span class="text-danger">N</span><span>Fine</span>
      </h2>

      <div class="row g-4 justify-content-center">

        <div class="col-sm-6 col-md-4">
          <div class="card shadow-lg border-0 rounded-4 h-100 text-center p-4">
            <div class="mb-3 fs-1 text-primary">
              <i class="fas fa-dumbbell"></i>
            </div>
            <h5 class="fw-bold">Modern Equipment</h5>
            <p class="text-muted">We provide latest gym machines for best workouts.</p>
          </div>
        </div>

        <div class="col-sm-6 col-md-4">
          <div class="card shadow-lg border-0 rounded-4 h-100 text-center p-4">
            <div class="mb-3 fs-1 text-primary">
              <i class="fas fa-user-graduate"></i>
            </div>
            <h5 class="fw-bold">Expert Trainers</h5>
            <p class="text-muted">Certified trainers guide you for proper fitness.</p>
          </div>
        </div>

        <div class="col-sm-6 col-md-4">
          <div class="card shadow-lg border-0 rounded-4 h-100 text-center p-4">
            <div class="mb-3 fs-1 text-success">
              <i class="fas fa-leaf"></i>
            </div>
            <h5 class="fw-bold">Healthy Diet Plans</h5>
            <p class="text-muted">Personalized nutrition plans for better results.</p>
          </div>
        </div>

        <div class="col-sm-6 col-md-4">
          <div class="card shadow-lg border-0 rounded-4 h-100 text-center p-4">
            <div class="mb-3 fs-1 text-warning">
              <i class="fas fa-clock"></i>
            </div>
            <h5 class="fw-bold">Flexible Timings</h5>
            <p class="text-muted">Morning to night sessions for your convenience.</p>
          </div>
        </div>

        <div class="col-sm-6 col-md-4">
          <div class="card shadow-lg border-0 rounded-4 h-100 text-center p-4">
            <div class="mb-3 fs-1 text-danger">
              <i class="fas fa-hand-holding-heart"></i>
            </div>
            <h5 class="fw-bold">Personal Training</h5>
            <p class="text-muted">One-to-one coaching designed specially for your body.</p>
          </div>
        </div>

        <div class="col-sm-6 col-md-4">
          <div class="card shadow-lg border-0 rounded-4 h-100 text-center p-4">
            <div class="mb-3 fs-1 text-info">
              <i class="fas fa-fire"></i>
            </div>
            <h5 class="fw-bold">Motivating Atmosphere</h5>
            <p class="text-muted">Train with energetic people and positive vibes.</p>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Trainers Section -->
  <section class="py-5 bg-light">
    <div class="container text-center">

      <h2 class="fw-bold mb-5">
        <span class="text-warning">Fit</span><span class="text-danger">N</span><span>Fine</span> Trainers
      </h2>

      <div class="row g-4">

        <div class="col-sm-6 col-md-4 h-100">
          <div class="gym-card">
            <img src="https://hips.hearstapps.com/hmg-prod/images/mh-trainer-2-1533576998.png"
              class="img-fluid w-100">
            <div class="gym-card-body">
              <h5>Gym Trainer</h5>
              <p>General fitness, workout guidance, gym floor support.</p>
            </div>
          </div>
        </div>

        <div class="col-sm-6 col-md-4 h-100">
          <div class="gym-card">
            <img src="https://framerusercontent.com/images/xHQ11t8P3FpqpZuq9oWGkeHU60.jpg"
              class="img-fluid w-100">
            <div class="gym-card-body">
              <h5>Personal Trainer</h5>
              <p>One-to-one training, customized workout & fast results.</p>
            </div>
          </div>
        </div>

        <div class="col-sm-6 col-md-4 h-100">
          <div class="gym-card">
            <img src="https://vitalityweightlossinstitute.com/wp-content/uploads/2025/04/What_makes_a_great_personal_trainer_-Blog-1200x800px_8338a95e-5fa3-42d8-901a-7893cea29330.jpg"
              class="img-fluid w-100">
            <div class="gym-card-body">
              <h5>Weight Loss Trainer</h5>
              <p>Fat burning, cardio, HIIT & body transformation.</p>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Membership Plans -->
  <section class="py-5 bg-light">
    <div class="container text-center">

      <h2 class="fw-bold mb-5">Membership Plans</h2>

      <div class="row g-4 justify-content-center">

        <% plans.forEach(function(p){ %>
        <div class="col-sm-6 col-md-3">
          <div class="card shadow-lg border-0 rounded-4 h-100 p-4">

            <h5 class="fw-bold text-black"><%= p.plan_name %></h5>

            <span class="badge <%= p.trainer_type==='With Trainer' ? 'bg-warning text-dark' : 'bg-secondary' %> mb-2">
              <%= p.trainer_type %>
            </span>

            <h2 class="my-3">â‚¹<%= p.price %></h2>

            <ul class="list-unstyled text-start ms-3 mt-3">
              <% let features=p.features ? p.features.split(',') : []; %>
              <% features.forEach(function(f){ %>
              <li>
                <i class="fas fa-check-circle text-success me-2"></i> <%= f %>
              </li>
              <% }) %>
            </ul>

            <a href="/membership" class="btn btn-primary w-100 mt-3">
              Join Now
            </a>

          </div>
        </div>
        <% }) %>

      </div>
    </div>
  </section>

  <!-- FOOTER -->
  <%- include('footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
