<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FitNFine</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <link rel="stylesheet" href="/style.css">

</head>

<body>
  <!-- NAVBAR -->
  <%- include('navbar') %>

    <!-- Choose Membership Page -->
    <section class="py-5 mt-5 bg-dark text-white text-center">
      <div class="container">
        <h1 class="fw-bold">Fit<span class="text-danger">N</span>Fine Plans</h1>
        <p class="mt-3">Flexible plans designed to match your fitness goals and budget.</p>
      </div>
    </section>

    <!-- Membership Plans Section -->
    <section class="py-5 bg-light">
      <div class="container text-center">

        <h2 class="fw-bold mb-5">Membership Plans</h2>

        <div class="row g-4 justify-content-center">

          <% data.forEach(function(p){ %>

            <div class="col-md-3">
              <div class="card shadow-lg border-0 rounded-4 h-100 p-4">

                <h5 class="fw-bold">
                  <%= p.plan_name %>
                </h5>

                <% if(p.trainer_type=='With Trainer' ){ %>
                  <span class="badge bg-warning text-dark mb-2">
                    <%= p.trainer_type %>
                  </span>
                  <% } else { %>
                    <span class="badge bg-secondary mb-2">
                      <%= p.trainer_type %>
                    </span>
                    <% } %>

                      <h2 class="my-3">â‚¹<%= p.price %>
                      </h2>

                      <ul class="list-unstyled text-start ms-3 mt-3">
                        <% let features=p.features.split(','); %>
                          <% features.forEach(function(f){ %>
                            <li>
                              <i class="fas fa-check-circle text-success me-2"></i>
                              <%= f %>
                            </li>
                            <% }) %>
                      </ul>

                      <a href="<%= p.button_url %>" class="btn btn-primary w-100 mt-3">
                        <%= p.button_text %>
                      </a>

              </div>
            </div>

            <% }) %>

        </div>
      </div>
    </section>


    
    <!-- Register Modal -->
    <div class="modal fade" id="registerModal" tabindex="-1">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 rounded-4 shadow">

          <div class="modal-body p-4">

            <h4 class="text-center text-primary fw-bold mb-4">
              <i class="fas fa-user-plus"></i> Member Registration
            </h4>

            <form action="/save_user" method="POST">

              <!-- Name -->
              <div class="mb-3">
                <label class="form-label">Full Name</label>
                <input type="text" name="name" class="form-control" placeholder="Enter your name" required>
              </div>

              <!-- Email -->
              <div class="mb-3">
                <label class="form-label">Email</label>
                <input type="email" name="email" class="form-control" placeholder="Enter your email" required>
              </div>

              <!-- Mobile -->
              <div class="mb-3">
                <label class="form-label">Mobile</label>
                <input type="text" name="mobile" class="form-control" placeholder="Enter mobile number" required>
              </div>

              <!-- Trainer -->
              <div class="mb-3">
                <label class="form-label">Select Trainer</label>
                <select name="trainer" class="form-select" required>
                  <option value="">Choose Trainer</option>
                  <option>Neha Kulkarni</option>
                  <option>Amit Patil</option>
                  <option>Nikhil Desai</option>
                </select>
              </div>

              <!-- Membership -->
              <div class="mb-4">
                <label class="form-label">Membership Plan</label>
                <select name="membership" class="form-select" required>
                  <option value="">Choose Plan</option>
                  <option>Monthly</option>
                  <option>Yearly</option>
                </select>
              </div>

              <!-- Button -->
              <div class="d-grid">
                <button type="submit" class="btn btn-primary">
                  <i class="fas fa-user-plus"></i> Register
                </button>
              </div>

            </form>

          </div>
        </div>
      </div>
    </div>


    <section class="py-5 bg-secondary text-white text-center">
      <div class="container">
        <h2 class="fw-bold">Start Your Fitness Journey Today</h2>
        <p>Choose a plan and transform your life with FitNFine.</p>
        <!-- <a href="/register" class="btn btn-primary btn-lg">Join Now</a> -->
        <a class="btn btn-warning btn-lg px-4 me-3" data-bs-toggle="modal" data-bs-target="#registerModal">
          Join Now
        </a>
      </div>
    </section>

    <!-- Time Table Section -->
    <section class="py-5 bg-light">
      <div class="container">

        <div class="text-center mb-5">
          <h2 class="fw-bold">
            Weekly <span class="text-warning">Fit</span><span class="text-danger">N</span><span>Fine</span> Timetable
          </h2>
          <p class="text-muted">Plan your workouts with our weekly training schedule</p>
        </div>

        <div class="table-responsive shadow rounded-4 bg-white p-3">

          <table class="table table-bordered text-center align-middle mb-0">

            <thead class="table-dark">
              <tr>
                <th>Time</th>
                <th>Mon</th>
                <th>Tue</th>
                <th>Wed</th>
                <th>Thu</th>
                <th>Fri</th>
                <th>Sat</th>
              </tr>
            </thead>

            <tbody>

              <tr>
                <th class="bg-light fw-semibold">6 AM - 8 AM</th>
                <td><span class="badge bg-success p-2">Yoga</span></td>
                <td><span class="badge bg-primary p-2">Cardio</span></td>
                <td><span class="badge bg-danger p-2">HIIT</span></td>
                <td><span class="badge bg-warning text-dark p-2">Zumba</span></td>
                <td><span class="badge bg-info p-2">Strength</span></td>
                <td><span class="badge bg-success p-2">Yoga</span></td>
              </tr>

              <tr>
                <th class="bg-light fw-semibold">8 AM - 10 AM</th>
                <td><span class="badge bg-primary p-2">Strength</span></td>
                <td><span class="badge bg-info p-2">Fat Loss</span></td>
                <td><span class="badge bg-warning text-dark p-2">Yoga</span></td>
                <td><span class="badge bg-danger p-2">HIIT</span></td>
                <td><span class="badge bg-success p-2">Zumba</span></td>
                <td><span class="badge bg-primary p-2">Strength</span></td>
              </tr>

              <tr>
                <th class="bg-light fw-semibold">5 PM - 7 PM</th>
                <td><span class="badge bg-danger p-2">HIIT</span></td>
                <td><span class="badge bg-success p-2">Yoga</span></td>
                <td><span class="badge bg-primary p-2">Strength</span></td>
                <td><span class="badge bg-info p-2">Fat Loss</span></td>
                <td><span class="badge bg-warning text-dark p-2">Zumba</span></td>
                <td><span class="badge bg-danger p-2">HIIT</span></td>
              </tr>

              <tr>
                <th class="bg-light fw-semibold">7 PM - 9 PM</th>
                <td><span class="badge bg-warning text-dark p-2">Zumba</span></td>
                <td><span class="badge bg-danger p-2">HIIT</span></td>
                <td><span class="badge bg-success p-2">Yoga</span></td>
                <td><span class="badge bg-primary p-2">Strength</span></td>
                <td><span class="badge bg-info p-2">Fat Loss</span></td>
                <td><span class="badge bg-warning text-dark p-2">Zumba</span></td>
              </tr>

            </tbody>

          </table>

        </div>

      </div>
    </section>





    <!-- FOOTER -->
    <%- include('footer') %>
</body>

</html>