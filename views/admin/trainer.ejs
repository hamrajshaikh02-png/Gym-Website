<%- include('navbar') %>
    <h3 class="mb-4 fw-bold text-dark bg-success">FitNFin Trainers</h3>

<div class="container my-5">

  <div class="row g-4">

    <% trainers.forEach(function(t){ %>

      <div class="col-md-4">
        <div class="card shadow-lg rounded-4 text-center overflow-hidden border-0 h-100">

          <!-- Image -->
          <div class="ratio ratio-4x3">
            <img src="/images/<%= t.photo %>" 
                 class="img-fluid object-fit-cover">
          </div>

          <!-- Content -->
          <div class="card-body p-4">

            <h5 class="fw-bold mb-1">
              <%= t.name %>
            </h5>

            <span class="badge bg-danger rounded-pill px-3 py-2 mb-3">
              <%= t.specialization %>
            </span>

            <p class="mb-1 text-muted">
              <b>Exp:</b> <%= t.experience %>
            </p>

            <p class="mb-3 text-muted">
              <b>Trains:</b> <%= t.training_type %>
            </p>

            <!-- Buttons -->
            <div class="d-grid gap-2">
              <a href="/admin/update-trainer/<%= t.id %>"
                 class="btn btn-outline-dark btn-sm fw-semibold">
                <i class="fas fa-edit"></i> Update
              </a>

              <a href="/admin/delete-trainer/<%= t.id %>"
                 onclick="return confirm('Are you sure?')"
                 class="btn btn-danger btn-sm fw-semibold">
                <i class="fas fa-trash"></i> Delete
              </a>
            </div>

          </div>

        </div>
      </div>

    <% }) %>

  </div>
</div>



  <div class="container mt-4">
    <h3 class="fw-bold mb-4 text-dark bg-success">Trainer Booking Requests</h3>

    <div class="card shadow">
      <div class="card-body">

        <table class="table table-bordered text-center mt-3">
          <thead class="table-dark">
            <tr>
              <th>Sr.No</th>
              <th>User Name</th>
              <th>Mobile</th>
              <th>Category</th>
              <th>Trainer</th>
              <th>Action</th>
            </tr>
          </thead>

          <tbody>
            <% if(bookings.length> 0){ %>
              <% for(var i=0;i<bookings.length;i++){ %>
                <tr>
                  <td>
                    <%= i+1 %>
                  </td>
                  <td>
                    <%= bookings[i].user_name %>
                  </td>
                  <td>
                    <%= bookings[i].mobile %>
                  </td>
                  <td>
                    <%= bookings[i].category %>
                  </td>
                  <td>
                    <%= bookings[i].trainer_name %>
                  </td>

                  <td>
                    <a href="/admin/delete_booking/<%= bookings[i].id %>"
                      class="btn btn-sm btn-danger">
                     <i class="fas fa-trash"></i> 
                    </a>
                  </td>
                </tr>
                <% } %>
                  <% } else { %>
                    <tr>
                      <td colspan="6" class="text-muted">No Booking Found</td>
                    </tr>
                    <% } %>
          </tbody>

        </table>


      </div>
    </div>
  </div>

  <%- include('footer') %>