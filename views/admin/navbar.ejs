<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Gym Admin Dashboard</title>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>


<style>
body{
    background:#ffffff;
    font-family: 'Segoe UI', sans-serif;
}

/* Mobile Header */
.mobile-header{
    display:none;
    background:#111827;
    color:white;
    padding:12px 15px;
    justify-content:space-between;
    align-items:center;
}
.mobile-header button{
    background:none;
    border:none;
    color:white;
    font-size:24px;
}

/* Sidebar */
.sidebar{
    width:250px;
    height:100vh;
    background:#111827;
    position:fixed;
    color:white;
    padding:20px;
    top:0;
    left:0;
    transition:0.3s;
}

/* Sidebar links */
.sidebar a{
    display:block;
    color:#ccc;
    padding:12px;
    text-decoration:none;
    margin-bottom:10px;
    border-radius:8px;
}
.sidebar a:hover{
    background:#22c55e;
    color:white;
}

/* Main */
.main{
    margin-left:250px;
    padding:20px;
}
.main h3{
    background:#22c55e;
    color:white;
    padding:10px;
    border-radius:8px;
}

/* Cards */
.stat-card{
    border-radius:15px;
    padding:25px;
    color:white;
    position:relative;
    overflow:hidden;
}
.stat-card i{
    font-size:40px;
    position:absolute;
    right:20px;
    bottom:20px;
    opacity:0.2;
}

/* Responsive */
@media(max-width:768px){
    .mobile-header{
        display:flex;
    }
    .sidebar{
        left:-260px;
        z-index:1000;
    }
    .sidebar.active{
        left:0;
    }
    .main{
        margin-left:0;
    }
}
</style>
</head>

<body class="bg-light">

<!-- Mobile Header -->
<div class="mobile-header">
  <button id="menuBtn"><i class="fa fa-bars"></i></button>
  <span class="fw-bold">Fit<span class="text-danger">N</span>Fine Admin</span>
</div>

<!-- Sidebar -->
<div class="sidebar">
    <h1 class="fw-bold">Fit<span class="text-danger fw-bold">N</span><span>Fine</span></h1>
    <a href="/admin/dashboard"><i class="fa fa-chart-line me-2"></i> Dashboard</a>
    <a href="/admin/home"><i class="fa fa-home me-2"></i> Home</a>
    <a href="/admin/trainers"><i class="fa fa-dumbbell me-2"></i> Trainers</a>
    <a href="/admin/memberships"><i class="fa fa-id-card me-2"></i> Memberships</a>
    <a href="/admin/gallery"><i class="fa fa-image me-2"></i> Gallery</a>
    <a href="/admin/contact"><i class="fa fa-phone me-2"></i> Contact</a>
    <a href="/admin/logout"><i class="fa fa-right-from-bracket me-2"></i> Logout</a>
</div>

<!-- Main Dashboard -->
<div class="main">








